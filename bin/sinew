#!/usr/bin/env ruby

require "sinew"
require "trollop"

# ARGV
options = Trollop.options do
  banner "Usage: sinew [options] <gub.sinew>"
  opt :verbose, "Dump every row"
end
Trollop.die "need a .sinew file to run against" if ARGV.blank?

# now run!
ARGV.each do |i|
  Sinew::Main.new(options.merge(file: i))
end
